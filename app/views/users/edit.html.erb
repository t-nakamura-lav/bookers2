<div class="container ">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>

        <% if @user.errors.any? %>
        <ul class="error_messages">
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %></ul>
        <% end %>

      <p class="inputName">Name
        <%= f.text_field :name %></p>
      <br>
      <p class="inputImage">ProfileImage
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
      <br>
      <p class="inputName">Introduction
        <%= f.text_field :introduction %></p>
      <br>
        <%= f.submit "Update User",class: "btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>